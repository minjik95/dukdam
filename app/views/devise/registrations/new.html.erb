<section class="carousel-item active">
     <div class="login_title">
      <h5 class="first_title">
        덕성을 담다
      </h5>
      <h3>
        덕담
      </h3>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    <div class="card login">
      
        <div class="card-block">
          <h3 class="card-title login">&emsp;&emsp;&emsp;&emsp;&emsp;회원가입</h3>
          <div align="center">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
            
            <div class="field">
              <%= f.label :"아이디" %><br>
              <%= f.text_field :idname%>
            </div>
            
            <div class="field">
              <%= f.label :"이름" %><br>
              <%= f.text_field :name%>
            </div>
            
            <div class="field">
              <%= f.label :"닉네임" %><br>
              <%= f.text_field :nickname %>
            </div>
          
            <div class="field">
              <%= f.label :"비밀번호" %><br>
              <%= f.password_field :password, autocomplete: "off" %><br>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>
          
            <div class="field">
              <%= f.label :"비밀번호 확인" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          
            <button class="btn btn-warning sign_in">가입하기</button>
          <% end %>
    
           <hr>
          <div class="login_signup" align="center">
            이미 회원이세요?
            <a href="/signin">로그인하기</a>
          </div>
        </div>
      </div>
</section>
